/* Body and overall text */
body {
    background-color: #1E2A38; /* Neutral dark blue */
    color: #E0E0E0; /* Light gray for readability */
    font-family: Arial, sans-serif; /* Simple, clean font */
}

/* Header text */
h1 {
    color: #4C9AFF; /* Soft blue for emphasis */
    font-size: 24px;
}

/* Tracker text */
.tracker {
    color: #E0E0E0; /* Pleasant light gray matching the body text */
    font-size: 20px;
    font-weight: bold;
}

/* Button styling */
button {
    background-color: #4C9AFF; /* Bright but subtle blue */
    color: white; /* Text color for high contrast */
    font-size: 18px;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #357ABD; /* Darker blue on hover */
}

/* Fact paragraph text */
#fact {
    color: #A7BBCB; /* Softer blue-gray */
    font-size: 20px;
    margin-top: 20px;
}

/* Footer text */
footer p {
    color: #E0E0E0; /* Matching the body color for consistency */
    font-size: 16px;
}

footer a {
    color: #4C9AFF; /* A link color that complements the dark blue background */
    text-decoration: none;
}

footer a:hover {
    color: #357ABD; /* Slightly darker blue for hover effect */
    text-decoration: underline;
}